@model DiscussionMVCAppDuffield.Models.Lot
@{
    ViewData["Title"] = "DeleteLot";
}

<h1>Delete Lot</h1>

<label>Do you want to delete this lot?</label>

<form asp-action="DeleteLot" method="post">

    @Html.HiddenFor(m => m.LotID)

    <div class="form-group">
        <label>Lot Number</label>
        <input asp-for="LotNumber" readonly class="form-control" />
    </div>

    <div class="form-group">
        <label>Lot Name</label>
        <input asp-for="LocationName" readonly class="form-control" />
    </div>

    <div class="form-group">
        <label>Lot Address</label>
        <input asp-for="LotAddress" readonly class="form-control" />
    </div>

    <div class="form-group">
        <label>Total Spots</label>
        <input asp-for="MaxCapacity" readonly class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Confirm Delete Lot</button>


</form>