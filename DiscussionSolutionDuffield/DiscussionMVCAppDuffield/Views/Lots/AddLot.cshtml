@model DiscussionMVCAppDuffield.Models.Lot

@{
    ViewData["Title"] = "Add Lot";
}

<h4>Add Lot</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AddLot" method="post">

    <div class="form-group">
        <label>Lot Number</label>
        <input asp-for="LotNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label>Lot Name</label>
        <input asp-for="LocationName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Lot Address</label>
        <input asp-for="LotAddress" class="form-control" />
    </div>

    <div class="form-group">
        <label>Total Spots</label>
        <input asp-for="MaxCapacity" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Add Lot</button>


</form>

